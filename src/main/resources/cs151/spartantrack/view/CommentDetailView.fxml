<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.CommentDetailController"
      spacing="15.0" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Comment Details"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <Label fx:id="dateLabel" text="Date: "
           style="-fx-font-size: 13px; -fx-text-fill: #666;"/>

    <Separator/>

    <Label text="Comment Text:"
           style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

    <TextArea fx:id="commentTextArea"
              VBox.vgrow="ALWAYS"
              prefRowCount="10"
              style="-fx-background-color: white; -fx-font-size: 13px;"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="closeButton" text="Close" onAction="#onCloseClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 5;"/>
    </HBox>
</VBox>