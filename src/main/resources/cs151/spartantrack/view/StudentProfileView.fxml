<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.StudentProfileController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Create Student Profile"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <!-- Full Name -->
    <VBox spacing="5.0">
        <Label text="Full Name: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="fullNameField"
                   promptText="Enter full name (required)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Academic Status -->
    <VBox spacing="5.0">
        <Label text="Academic Status: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="academicStatusComboBox"
                  promptText="Select academic status (required)"
                  prefWidth="400.0"
                  style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Current Job Status -->
    <VBox spacing="5.0">
        <Label text="Current Job Status: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <HBox spacing="20.0">
            <RadioButton fx:id="employedRadio"
                         text="Employed"
                         style="-fx-font-size: 13px;">
                <toggleGroup>
                    <ToggleGroup fx:id="employmentGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="notEmployedRadio"
                         text="Not Employed"
                         toggleGroup="$employmentGroup"
                         selected="true"
                         style="-fx-font-size: 13px;"/>
        </HBox>
    </VBox>

    <!-- Job Details -->
    <VBox spacing="5.0">
        <Label text="Job Details:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label text="(Required if employed)"
               style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        <TextField fx:id="jobDetailsField"
                   promptText="Enter job details (e.g., Software Engineer at ABC Company)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"
                   disable="true"/>
    </VBox>

    <!-- Programming Languages (Multiple Select) -->
    <VBox spacing="5.0">
        <Label text="Programming Languages:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label text="(Hold Ctrl/Cmd to select multiple)"
               style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        <ListView fx:id="languagesListView"
                  prefHeight="150.0"
                  prefWidth="400.0"
                  style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Error/Status Message -->
    <Label fx:id="statusLabel"
           text=""
           style="-fx-font-size: 13px; -fx-text-fill: #CC0000; -fx-font-weight: bold;"/>

    <!-- Buttons -->
    <HBox spacing="10.0">
        <Button fx:id="saveButton"
                text="Save Student Profile"
                onAction="#onSaveStudentClick"
                prefWidth="180.0"
                style="-fx-background-color: #0055A2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>

        <Button fx:id="clearButton"
                text="Clear Form"
                onAction="#onClearFormClick"
                prefWidth="120.0"
                style="-fx-background-color: #E5A823; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>

        <Button fx:id="backButton"
                text="Back to Home"
                onAction="#onBackClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>
    </HBox>

    <!-- Required fields note -->
    <Label text="* Required fields"
           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;"/>
</VBox>