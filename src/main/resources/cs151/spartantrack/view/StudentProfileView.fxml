<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SelectionMode?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.StudentProfileController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Create Student Profile"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <!-- First Name -->
    <VBox spacing="5.0">
        <Label text="First Name: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="firstNameField"
                   promptText="Enter first name (required)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Last Name -->
    <VBox spacing="5.0">
        <Label text="Last Name: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="lastNameField"
                   promptText="Enter last name (required)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Email -->
    <VBox spacing="5.0">
        <Label text="Email: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="emailField"
                   promptText="Enter email address (required)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Major -->
    <VBox spacing="5.0">
        <Label text="Major: *"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="majorField"
                   promptText="Enter major (required)"
                   prefWidth="400.0"
                   style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Programming Languages (Multiple Select) -->
    <VBox spacing="5.0">
        <Label text="Programming Languages:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label text="(Hold Ctrl/Cmd to select multiple)"
               style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        <ListView fx:id="languagesListView"
                  prefHeight="150.0"
                  prefWidth="400.0"
                  style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Error/Status Message -->
    <Label fx:id="statusLabel"
           text=""
           style="-fx-font-size: 13px; -fx-text-fill: #CC0000; -fx-font-weight: bold;"/>

    <!-- Buttons -->
    <HBox spacing="10.0">
        <Button fx:id="saveButton"
                text="Save Student Profile"
                onAction="#onSaveStudentClick"
                prefWidth="180.0"
                style="-fx-background-color: #0055A2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>

        <Button fx:id="clearButton"
                text="Clear Form"
                onAction="#onClearFormClick"
                prefWidth="120.0"
                style="-fx-background-color: #E5A823; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>

        <Button fx:id="backButton"
                text="â† Back to Home"
                onAction="#onBackClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>
    </HBox>

    <!-- Required fields note -->
    <Label text="* Required fields"
           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;"/>
</VBox>