<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.StudentCommentsController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Title -->
    <Label text="Student Comments / Journal Entries"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <!-- Student Name -->
    <Label fx:id="studentNameLabel"
           text="Comments for: [Student Name]"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <!-- Existing Comments Section -->
    <VBox spacing="10.0" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="All Comments (Most Recent First)"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>
            <Label fx:id="commentCountLabel"
                   text="Total Comments: 0"
                   style="-fx-font-size: 13px; -fx-text-fill: #666;"/>
        </HBox>

        <Label text="Each comment shows the date it was created in [MM/DD/YYYY] format"
               style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;"/>

        <ListView fx:id="commentsListView"
                  prefHeight="300.0"
                  VBox.vgrow="ALWAYS"
                  style="-fx-font-size: 13px;"/>
    </VBox>

    <!-- Add New Comment Section -->
    <VBox spacing="10.0"
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">

        <Label text="Add New Comment"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

        <Label text="Enter your comment below. It will be automatically stamped with today's date."
               style="-fx-font-size: 11px; -fx-text-fill: #666;"/>

        <TextArea fx:id="newCommentTextArea"
                  promptText="Enter faculty comment about the student..."
                  prefRowCount="5"
                  wrapText="true"
                  style="-fx-font-size: 13px;"/>

        <HBox spacing="10.0">
            <Button fx:id="addCommentButton"
                    text="Add Comment"
                    onAction="#onAddCommentClick"
                    prefWidth="150.0"
                    style="-fx-background-color: #0055A2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>
        </HBox>
    </VBox>

    <!-- Status Message -->
    <Label fx:id="statusLabel"
           text=""
           style="-fx-font-size: 13px; -fx-text-fill: #CC0000; -fx-font-weight: bold;"/>

    <!-- Back Button -->
    <HBox spacing="10.0">
        <Button fx:id="backButton"
                text="â† Back to Students List"
                onAction="#onBackClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"/>
    </HBox>
</VBox>