<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.ReportsController"
      spacing="15.0" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Student Reports"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <HBox spacing="20.0" alignment="CENTER_LEFT">
        <Label text="Filter by Service Flag:"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <RadioButton fx:id="whitelistRadio" text="Whitelisted Students"/>

        <RadioButton fx:id="blacklistRadio" text="Blacklisted Students"/>
    </HBox>

    <Label fx:id="studentCountLabel" text="Total Students: 0"
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

    <TableView fx:id="studentsTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="150"/>
            <TableColumn fx:id="academicStatusColumn" text="Academic Status" prefWidth="120"/>
            <TableColumn fx:id="employmentColumn" text="Employment" prefWidth="120"/>
            <TableColumn fx:id="languagesColumn" text="Programming Languages" prefWidth="200"/>
            <TableColumn fx:id="preferredRoleColumn" text="Preferred Role" prefWidth="150"/>
            <TableColumn fx:id="commentsColumn" text="Comments" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <Label text="Tip: Double-click on a student row to view full details and comments"
           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;"/>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 12px;"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="backButton" text="Back to Home" onAction="#onBackClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 5;"/>
    </HBox>
</VBox>