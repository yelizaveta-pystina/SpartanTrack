<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.MainController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label fx:id="welcomeText" text="SpartanTrack"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <Label text="Student Management System"
           style="-fx-font-size: 16px; -fx-text-fill: #666;"/>

    <VBox spacing="15.0" alignment="CENTER">
        <padding>
            <Insets top="30.0"/>
        </padding>

        <Button fx:id="manageLanguagesButton"
                text="Manage Programming Languages"
                onAction="#onManageLanguagesClick"
                prefWidth="280.0"
                style="-fx-background-color: #0055A2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12px 24px; -fx-background-radius: 5;"/>

        <Button fx:id="createProfileButton"
                text="Create Student Profile"
                onAction="#onCreateProfileClick"
                prefWidth="280.0"
                style="-fx-background-color: #E5A823; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12px 24px; -fx-background-radius: 5;"/>

        <Button fx:id="viewStudentsButton"
                text="View All Student Profiles"
                onAction="#onViewStudentsClick"
                prefWidth="280.0"
                style="-fx-background-color: #00AA00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12px 24px; -fx-background-radius: 5;"/>
    </VBox>
</VBox>