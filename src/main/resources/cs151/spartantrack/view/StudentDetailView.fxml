<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.StudentDetailController"
      spacing="15.0" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Student Profile Details"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <GridPane hgap="15.0" vgap="12.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
            <ColumnConstraints percentWidth="70" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Academic Status:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="academicStatusLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Employment Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="employmentLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Job Details:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="jobDetailsLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Programming Languages:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="languagesLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" wrapText="true"/>

        <Label text="Databases Known:" GridPane.columnIndex="0" GridPane.rowIndex="5"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="databasesLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" wrapText="true"/>

        <Label text="Preferred Role:" GridPane.columnIndex="0" GridPane.rowIndex="6"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="preferredRoleLabel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Service Flag:" GridPane.columnIndex="0" GridPane.rowIndex="7"
               style="-fx-font-weight: bold;"/>
        <Label fx:id="serviceFlagLabel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>

    <Separator/>

    <Label text="Comments History"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>

    <Label fx:id="commentCountLabel" text="Total Comments: 0"
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

    <TableView fx:id="commentsTableView" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120" sortable="true"/>
            <TableColumn fx:id="commentColumn" text="Comment" prefWidth="480"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <Label text="Tip: Click on a comment row to view the full comment text"
           style="-fx-font-size: 11px; -fx-text-fill: #666; -fx-font-style: italic;"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="closeButton" text="Close" onAction="#onCloseClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 5;"/>
    </HBox>
</VBox>