<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.spartantrack.controller.ProgrammingLanguagesController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Program Language Management" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055A2;"/>
    
    <VBox spacing="10.0">
        <Label text="Add New Programming Language:" 
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="languageNameField" 
                       promptText="Enter programming language name (required)"
                       prefWidth="350.0"
                       style="-fx-font-size: 13px;"/>
            <Button fx:id="addLanguageButton"
                    text="Add Language" 
                    onAction="#onAddLanguageClick"
                    style="-fx-background-color: #0055A2; -fx-text-fill: white; -fx-padding: 8px 16px;"/>
        </HBox>
    </VBox>
    
    <VBox spacing="10.0">
        <Label text="Existing Programming Languages:" 
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ListView fx:id="existingLanguagesList" 
                  prefHeight="250.0"
                  style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 3;"/>
    </VBox>
    
    <HBox spacing="10.0">
        <Button fx:id="backButton" 
                text="← Back to Home" 
                onAction="#onBackClick"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 8px 16px;"/>
    </HBox>
</VBox>
